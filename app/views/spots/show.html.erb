
 <div class="container">

  <header class="header-image">
        <div class="headline">
            <div class="container">
                <h1><%= @spot.name %></h1>
            </div>
        </div>
    </header>

 	<div class="row">
 		<div class="col-xs-12 text-center mapList">
 			<%= image_tag("mapshot.png", :alt => "map", :class => "mapImg") %>
 		</div>
 	</div>

<div class="container text-center listBox">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-sm-6 col-md-4 text-center mapList"">
                    	<img src="http://callwalsh.com/images/paving-03.jpg">           
                    </div>
                    <div class="col-sm-6 col-md-8 divProfile">
                        <h3><%= @spot.name %></h3>
                        <small><cite title="San Francisco, USA"><i class="glyphicon glyphicon-map-marker">
                        </i>Seattle, WA </cite></small>
                        <p>
                            <i class="glyphicon glyphicon-envelope"></i><%= @spot.address %>
                            <br />
                            <i class="glyphicon glyphicon-globe"></i><%= @spot.price %>
                            <br />
                            <i class="glyphicon glyphicon-globe"></i><%= @spot.spot_type %>
                            <br />
                            <i class="glyphicon glyphicon-gift"></i>2 Days</p>
                            <br />
                            <p>This spot has gone unused for two years. Please use it! I need the money.</p>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

	<div class="row text-center">
		<div class="col-xs-12">
			<button onclick="window.location='/bookings/new?spot_id=<%= @spot.id %>';" class="paypalbtn"><img src="https://www.paypalobjects.com/webstatic/icon/favicon.ico"><strong>Book with PayPal</strong></button>
		</div>
	</div>

