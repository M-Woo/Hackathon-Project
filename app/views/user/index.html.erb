<%= bootstrap_form_for :user do |form| %>
<div class="container text-center">
  <div class="row form">
  	<div class="col-md-12">
    
          <form class="form-horizontal" action="" method="POST">
          <fieldset>
            <div id="legend">
              <legend class="text-center formTitle">Register</legend>
            </div>
            <div class="control-group">
              <div class="controls">
			  <%= form.text_field :name, placeholder: "name"%>                
			  <p class="help-block">Please provide your Name</p>
              </div>
            </div>
         
            <div class="control-group">
              <div class="controls">
	  			<%= form.text_field :email, placeholder: "email"%>
                <p class="help-block">Please provide your Email</p>
              </div>
            </div>

            <div class="control-group">
              <div class="controls">
	  			<%= form.password_field :password, placeholder: "password"%>
                <p class="help-block">Please provide your Password</p>
              </div>
            </div>
         
            <div class="control-group">
              <!-- Button -->
              <div class="controls text-center">
                <button class="btn btn-success">Register</button>
              </div>
            </div>
          </fieldset>
        </form>
    
    </div> 
  </div>
</div>
<%end%>